<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <com.marvinlabs.widget.floatinglabel.edittext.FloatingLabelEditText
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            app:flw_inputWidgetTextColor="@android:color/primary_text_light"
            app:flw_inputWidgetTextSize="@dimen/text_size_large"
            app:flw_labelText="@string/label_configure_title"
            app:flw_labelTextColor="@android:color/secondary_text_light"
            app:flw_labelTextSize="@dimen/text_size_medium" />

        <com.marvinlabs.widget.floatinglabel.edittext.FloatingLabelEditText
            android:id="@+id/text_server_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            app:flw_inputWidgetTextColor="@android:color/primary_text_light"
            app:flw_inputWidgetTextSize="@dimen/text_size_large"
            app:flw_labelText="@string/label_configure_server_ip"
            app:flw_labelTextColor="@android:color/secondary_text_light"
            app:flw_labelTextSize="@dimen/text_size_medium" />

        <com.marvinlabs.widget.floatinglabel.edittext.FloatingLabelEditText
            android:id="@+id/text_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:flw_inputWidgetTextColor="@android:color/primary_text_light"
            app:flw_inputWidgetTextSize="@dimen/text_size_large"
            app:flw_labelText="@string/label_configure_port"
            app:flw_labelTextColor="@android:color/secondary_text_light"
            app:flw_labelTextSize="@dimen/text_size_medium" />

        <com.marvinlabs.widget.floatinglabel.edittext.FloatingLabelEditText
            android:id="@+id/text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            app:flw_inputWidgetTextColor="@android:color/primary_text_light"
            app:flw_inputWidgetTextSize="@dimen/text_size_large"
            app:flw_labelText="@string/label_configure_password"
            app:flw_labelTextColor="@android:color/secondary_text_light"
            app:flw_labelTextSize="@dimen/text_size_medium" />

        <com.marvinlabs.widget.floatinglabel.edittext.FloatingLabelEditText
            android:id="@+id/text_user_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            app:flw_inputWidgetTextColor="@android:color/primary_text_light"
            app:flw_inputWidgetTextSize="@dimen/text_size_large"
            app:flw_labelText="@string/label_configure_user_token"
            app:flw_labelTextColor="@android:color/secondary_text_light"
            app:flw_labelTextSize="@dimen/text_size_medium" />

        <com.marvinlabs.widget.floatinglabel.edittext.FloatingLabelEditText
            android:id="@+id/text_local_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            app:flw_inputWidgetTextColor="@android:color/primary_text_light"
            app:flw_inputWidgetTextSize="@dimen/text_size_large"
            app:flw_labelText="@string/label_configure_local_ip"
            app:flw_labelTextColor="@android:color/secondary_text_light"
            app:flw_labelTextSize="@dimen/text_size_medium" />

        <com.marvinlabs.widget.floatinglabel.edittext.FloatingLabelEditText
            android:id="@+id/text_maximum_transmission_units"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:flw_inputWidgetTextColor="@android:color/primary_text_light"
            app:flw_inputWidgetTextSize="@dimen/text_size_large"
            app:flw_labelText="@string/label_configure_maximum_transmission_units"
            app:flw_labelTextColor="@android:color/secondary_text_light"
            app:flw_labelTextSize="@dimen/text_size_medium" />

        <com.marvinlabs.widget.floatinglabel.edittext.FloatingLabelEditText
            android:id="@+id/text_concurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:flw_inputWidgetTextColor="@android:color/primary_text_light"
            app:flw_inputWidgetTextSize="@dimen/text_size_large"
            app:flw_labelText="@string/label_configure_concurrency"
            app:flw_labelTextColor="@android:color/secondary_text_light"
            app:flw_labelTextSize="@dimen/text_size_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_bypass_china_routes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

            </android.support.v7.widget.SwitchCompat>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/switch_bypass_china_routes"
                android:text="@string/label_configure_switch_bypass_china_routes"
                android:textAppearance="?android:attr/textAppearanceListItem" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
